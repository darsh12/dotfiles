syntax on
set nocompatible
set hlsearch
set ignorecase
set smartcase
set showmatch
set incsearch
" Always show statusline
set laststatus=2
" Fix backspace
set backspace=2
set tabstop=2 softtabstop=0 expandtab shiftwidth=2 smarttab

" map leader to comma
let mapleader = "," 

" Set cursor line
set cursorline


"change search color
hi Search ctermbg=LightYellow ctermfg=Red

filetype plugin indent on
"Get the 2-space YAML as the default when hit carriage return after the colon
autocmd BufNewFile,BufReadPost *.{yaml,yml} set filetype=yaml foldmethod=indent
autocmd FileType yaml setlocal tabstop=2 softtabstop=2 shiftwidth=2 expandtab indentkeys-=0# indentkeys-=<:> foldmethod=indent nofoldenable

"Open nerdtree with Ctrl-n
nnoremap <C-n> :NERDTreeToggle<CR>
" Show hiddenfiles in nerdtree
let NERDTreeShowHidden=1

" Map sudo write
cmap w!! w !sudo tee % >/dev/null

call plug#begin('~/.vim/autoload/plug')
Plug 'scrooloose/nerdtree' 	"Allows to view file directory
Plug 'vim-airline/vim-airline'	"Themes
Plug 'vim-airline/vim-airline-themes'	"Themes
Plug 'vim-scripts/matchit.zip'		"Extended matching
Plug 'tpope/vim-fugitive'		"Git plugin
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'
Plug 'w0rp/ale'   "Syntax checker
Plug 'nathanaelkane/vim-indent-guides'
Plug 'embear/vim-localvimrc'
Plug 'vim-scripts/ZoomWin'
Plug 'qxxxb/vim-searchhi'
Plug 'mhinz/vim-startify'
Plug 'ryanoasis/vim-devicons'
Plug 'simnalamburt/vim-mundo'
Plug 'tpope/vim-unimpaired'
source ~/.vim.plugins "File to add additional plugins
call plug#end()

" NerdTree config
" Close nerdtree on file open 
let NERDTreeQuitOnOpen = 1

" FZF options
" This is the default extra key bindings
let g:fzf_action = {
  \ 'ctrl-t': 'tab split',
  \ 'ctrl-i': 'split',
  \ 'ctrl-s': 'vsplit' }

"Airline config
let g:airline_powerline_fonts = 1 
let g:airline_theme='solarized'
let g:airline_solarized_bg='dark'
let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#left_sep = ' '
let g:airline#extensions#tabline#left_alt_sep = '|'
let g:airline#extensions#tabline#formatter = 'default'

" vim-indent-guides config
let g:indent_guides_enable_on_vim_startup = 1
let g:indent_guides_start_level = 2
let g:indent_guides_guide_size = 1



let g:startify_session_dir='~/.vim/sessions'
let g:startify_bookmarks=systemlist("cut -sd' ' -f 2- ~/.NERDTreeBookmarks")

""" Start Remap 

nnoremap ; :

" Press Space to turn off highlighting and clear any message already displayed.
nnoremap <silent> <Space> :nohlsearch<Bar>:echo<CR>

"Open nerdtree with Ctrl-n
nnoremap <C-n> :NERDTreeToggle<CR>
nnoremap <leader>n :NERDTreeFocus<CR>

" Startify config
nnoremap <leader>so :SLoad
nnoremap <leader>ss :SSave
nnoremap <leader>sd :SDelete<CR>
nnoremap <leader>sc :SClose<CR>

" View diff on file changes
nnoremap <silent> <leader>d :w !diff % -<CR>

" Source vimrc file
nnoremap <leader>sv :source $MYVIMRC<cr>

" Open files with Ctrl-f
nnoremap <silent> <C-f> :Files<CR>

""" END Remap

" save undo trees in files
set undofile
set undodir=~/.vim/undo

" number of undo saved
set undolevels=10000

" toggle mundo
nnoremap <leader>u :MundoToggle<CR>

source ~/.vim.custom
